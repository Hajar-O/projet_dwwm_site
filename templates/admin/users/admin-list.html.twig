{% extends 'admin/base.admin.html.twig' %}

{% block content %}

    <section>
        <h3>liste des Administrateurs</h3>
        <button><a href="{{ path('add-admin') }}">Add an admin</a></button>

        <table>
            <tr>
                <td>Nom de l'admin</td>
                <td>Mail</td>
                <td>Gestion</td>
            </tr>

            {% for user in users %}

            <tr>

                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.email }}</td>
                    <td><p><a href="{{ path('edit-admin', { id: user.id }) }}">Modifier</a></p></td>


            </tr>

            {% endfor %}


        </table>
    </section>

{% endblock %}