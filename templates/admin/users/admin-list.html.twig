{% extends 'admin/base.admin.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.4/css/dataTables.dataTables.min.css">
{% endblock %}
{% block content %}
    <h3>liste des Administrateurs</h3>
    <button><a href="{{ path('add-admin') }}">Add an admin</a></button>
    <section class="tableCenter">


        <table id="myTable">
            <thead>
                <tr>
                    <td>Nom de l'admin</td>
                    <td>Mail</td>
                    {# <td>RÃ´le</td> #}
                    <td>Gestion</td>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.email }}</td>
                    {# <td>{{ user.roles }}</td> #}
                    <td><p><a href="{{ path('edit-admin', { id: user.id }) }}">Modifier</a></p></td>

                </tr>
            {% endfor %}
            </tbody>








        </table>
    </section>

{% endblock %}
