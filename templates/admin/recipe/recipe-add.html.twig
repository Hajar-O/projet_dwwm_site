{% extends 'admin/base.admin.html.twig' %}

{% block content %}
 <main>
     {{ form_start(recipeForm) }}

         {{ form_row(recipeForm.title) }}
         {{ form_row(recipeForm.image) }}
         {{ form_row(recipeForm.idCategory) }}

     <label>Ingrédients</label>
     {# pour chaque famille d'ingrédient #}
         {% for categoryIngredient in categoryIngredients %}
             <details>
                 <summary>{{categoryIngredient.name}}</summary>

                 {# pour chaque ingrédient dans la category #}

                 {% for ingredient in categoryIngredient.ingredients %}

                     <input  type="checkbox"> {{ ingredient.ingredient }} <input type="number">
                     <select name="volume" id="">
                         <option value="litre">L</option>
                         <option value="gramme">g</option>

                     </select>
                 {% endfor %}
             </details>
         {% endfor %}






     {{ form_end(recipeForm) }}
 </main>



{% endblock %}