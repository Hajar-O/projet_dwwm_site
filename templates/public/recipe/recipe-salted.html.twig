{%  extends 'public/base.html.twig' %}

{% block content %}

    <main id="AllRecipe">
        {% block image %}
            <section id="imgDefaultList">
                <div class="imgDefaultList">
                    <img src="{{ asset('assets/img/bc-home.jpg') }}" alt="">
                    <h2>nos recettes sal√©es</h2>
                </div>
            </section>

        {% endblock image %}

        <section class="allRecipe">


            {% for recipe in recipes %}
                <a href="{{ path('recipe',{id:recipe.id}) }}">
                    <article class="recipe">
                        <div class="recipeImg">
                            <img src="{{ asset('assets/uploads/'~recipe.image) }}" alt="">
                        </div>
                        <h3>{{ recipe.title }}</h3>
                    </article>
                </a>
            {% endfor %}

        </section>
    </main>

{% endblock content %}

